<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>

<style>
    h1 {
        color: black;
    }
</style>

<body>
    <div class="container">
        <div class="row">
            <div class="col text-center mt-3">
                <h1>Gerenciamento de Atividades</h1>
            </div>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-5">
                <nav class="nav ms-5">
                    <a href="/cadastrar" class="btn btn-primary mt-4" style="width: 200px; background-color: white; border: solid 1px black; color: black;">Cadastrar Cliente</a>
                    <a href="/listar" class="btn btn-primary mt-4 ms-4" style="width: 200px; background-color: white; border: solid 1px black; color: black;">Listar Cliente</a>
                </nav>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col mt-2">
                <div id="chart">
                </div>
            </div>
        </div>

        <script src="https://www.gstatic.com/charts/loader.js"></script>
        <script>
        google.charts.load('current', {packages: ['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            const containers = document.querySelector('#chart')
            let quant = Number("<%= quantidade%>")
            const data = new google.visualization.arrayToDataTable([
                ['Cadastro', 'Qtd de Clientes'],
                ['', 0 ],
                ['', quant ],
                ['', 0 ],
            ])

            const options = {
                title: 'Clientes Cadastrados no Sistema',
                height: 500,
                animation: {
                    startup: true,
                    duration: 3000
                }
            }

            const chart = new google.visualization.ColumnChart(containers)
            chart.draw(data, options)
        }
        </script>
    </div>
</body>

</html>